{
    "manifest_version": 3,
    "name":"Browsing Time Tracker",
    "version":"2.0.0",
    "default_locale": "en",
    "description":"Monitor the time wasted on websites",

    "author":{
        "email":"hazemgamalelgendy@gmail.com"
    },
        
    "action":{
        "default_popup":"src/html/main.html"
    },

    "options_ui": {
        "page": "src/html/options.html",
        "open_in_tab": true
      },

    "content_scripts":[
        {
            "matches":["*://*/*"],
            "js":["src/javascript/content/browsingTimeTrackerContent.js"]
        }
    ],

    "permissions":[
        "idle",
        "tabs",
        "storage",
        "activeTab",
        "background",
        "alarms",
        "management",
        "favicon",
        "unlimitedStorage"
    ],

    

    "content_security_policy":{
        "script-src":"self",
        "object-src":"self",
        "img-src":"//favicon"
    },

    "background":{
        "service_worker":"src/javascript/sw.js", "type":"module"
    }
}
