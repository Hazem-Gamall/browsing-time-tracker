{
    "manifest_version": 3,
    "name":"Test Time Tracker",
    "version":"2.0",
    "description":"Monitor the time wasted on websites",
        
    "action":{
        "default_popup":"src/html/main.html"
    },

    "options_ui": {
        "page": "src/html/options.html",
        "open_in_tab": true
      },

    "content_scripts":[
        {
            "matches":["https://*.youtube.com/*"],
            "js":["src/javascript/content.js"]
        }
    ],

    "permissions":[
        "idle",
        "tabs",
        "storage",
        "activeTab",
        "background",
        "alarms",
        "management",
        "favicon",
        "unlimitedStorage"
    ],

    

    "content_security_policy":{
        "script-src":"self",
        "object-src":"self",
        "img-src":"//favicon"
    },

    "background":{
        "service_worker":"src/javascript/sw.js", "type":"module"
    }
}
