{
    "manifest_version": 2,
    "name":"Browsing Time Tracker",
    "version":"1.0",
    "description":"Monitor the time wasted on websites",
        
    "browser_action":{
        "default_popup":"popup.html"
    },

    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
      },

    "permissions":[
        "idle",
        "chrome://favicon/",
        "tabs",
        "storage",
        "activeTab",
        "background",
        "management"
        
    ],

    "icons": {"48": "icon.png" },

    "content_security_policy": "script-src 'self'; object-src 'self'; img-src chrome://favicon;",

    "background":{
        "scripts":["background.js"],
        "persistent": false
    }
}
